{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "noEmit": true,
    "target": "ESNext",

    // type checking
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,

    // modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    // paths
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@atoms/*": ["./src/atoms/*"],
      "@errors/*": ["./src/errors/*"],
      "@geometries/*": ["./src/components/geometries/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@loaders/*": ["./src/loaders/*"],
      "@materials/*": ["./src/components/materials/*"],
      "@shaders/*": ["./src/shaders/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@state/*": ["./src/state/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
